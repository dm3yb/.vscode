{
	// Commons
	"window.openFilesInNewWindow": "off",
	"editor.tabSize": 2,
	"editor.folding": true,
	"editor.insertSpaces": false,
	"editor.smoothScrolling": true,
	"editor.minimap.enabled": false,
	"editor.detectIndentation": false,
	"editor.suggestSelection": "first",
	// "editor.multiCursorModifier": "ctrlCmd",
	"editor.foldingImportsByDefault": true,

	// Word wrapping
	"editor.wordWrap": "bounded",
	"editor.wrappingIndent": "same",
	"editor.wordWrapColumn": 90,

	// Scroll
	"editor.scrollBeyondLastLine": true,

	// Tags
	"editor.linkedEditing": true,
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"typescript.autoClosingTags": true,

	// Symbols
	"editor.renderControlCharacters": false,
	"editor.unicodeHighlight.ambiguousCharacters": false,

	// Intellisense
	"html.completion.attributeDefaultValue": "singlequotes",
	"workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
	"symbols.hidesExplorerArrows": false,
	"editor.glyphMargin": false,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	"editor.accessibilitySupport": "off",
	"workbench.layoutControl.enabled": false,
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.editor.empty.hint": "hidden",
	"vscode_custom_css.imports": [
		"file:///Users/dmitry.b25/webdev/vscode-settings/editor.css"
	],

	// Cursor
	"editor.cursorBlinking": "expand",
	"editor.cursorStyle": "line-thin",
	"editor.cursorSmoothCaretAnimation": "explicit",

	// Fonts
	"editor.fontSize": 14,
	"editor.lineHeight": 2.25,
	"editor.fontLigatures": true,
	"editor.fontWeight": 400,
	"editor.fontFamily": "Cascadia Code NF, JetBrains Mono, Operator Mono Lig, Ubuntu Mono, Geist Mono",
	"editor.inlayHints.fontFamily": "Operator Mono Lig",
	"editor.codeLensFontFamily": "Operator Mono Lig",
	"debug.console.fontFamily": "Operator Mono Lig",
	"workbench.fontAliasing": "default",

	// Token's
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				// Apply italic font style to comments and function parameters
				"scope": ["comment", "variable.parameter"],
				"settings": {
					"fontStyle": "italic"
				}
			}
		]
	},

	// Explorer Tree
	"workbench.tree.indent": 20,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.colorCustomizations": {
		"tree.indentGuidesStroke": "#ffffff40"
	},

	"indentRainbow.colors": [
		"rgba(255,255,64,0.025)",
		"rgba(127,255,127,0.025)",
		"rgba(255,127,255,0.025)",
		"rgba(79,236,236,0.025)"
	],

	// Bracket Pair Colorizer
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
	"bracket-pair-colorizer-2.colorMode": "Consecutive",
	"bracket-pair-colorizer-2.highlightActiveScope": true,
	"bracket-pair-colorizer-2.showBracketsInGutter": true,
	"bracket-pair-colorizer-2.rulerPosition": "Left",

	// Terminal
	"terminal.integrated.fontFamily": "Ubuntu Mono",
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.lineHeight": 1.9,

	// Explorer
	"explorer.confirmDelete": false,
	"explorer.compactFolders": false,
	"explorer.confirmDragAndDrop": false,
	"workbench.editor.tabSizing": "shrink",
	"workbench.startupEditor": "newUntitledFile",

	// Debug's
	"debug.toolBarLocation": "hidden",
	"debug.focusWindowOnBreak": false,
	"debug.focusEditorOnBreak": false,
	"debug.showInlineBreakpointCandidates": false,
	"debug.showBreakpointsInOverviewRuler": false,

	// EMMET
	"emmet.includeLanguages": {
		"blade": "html",
		"javascript": "javascriptreact"
	},
	"emmet.triggerExpansionOnTab": true,

	// Breadcrumbs
	"breadcrumbs.icons": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.symbolPath": "off",
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showConstructors": false,

	// Hide files
	"files.exclude": {
		"**/.expo": true,
		"**/.expo-shared": true,
		"**/.idea": true,
		"**/.next": true,
		"**/.nuxt": true,
		"**/dist": true
	},

	// Formatters
	"prettier.semi": false,
	"prettier.useTabs": true,
	"editor.formatOnSave": true,
	"prettier.useEditorConfig": true,
	"prettier.configPath": ".prettierrc",
	"files.autoSave": "onFocusChange",
	"editor.formatOnType": true,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "explicit",
		"source.sortMembers": "explicit",
		"source.addMissingImports.ts": "explicit"
	},
	"prettier.arrowParens": "avoid",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.inlineSuggest.enabled": true,
	"[blade]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier.documentSelectors": ["**/*.blade.php"],
	"[php]": {
		"editor.defaultFormatter": "open-southeners.laravel-pint"
	},

	// JS & TS
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.preferences.quoteStyle": "double",
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"javascript.preferences.quoteStyle": "double",
	"javascript.format.semicolons": "remove",
	"typescript.format.semicolons": "remove",
	"js/ts.implicitProjectConfig.experimentalDecorators": true,

	// Next.js
	"workbench.editor.customLabels.patterns": {
		"**/app/**/[[]*[]]/[[]*[]]/page.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/page.tsx",
		"**/app/**/[[]*[]]/page.tsx": "${dirname(1)}/${dirname}/page.tsx",
		"**/app/**/page.tsx": "${dirname}/page.tsx",

		"**/app/**/[[]*[]]/[[]*[]]/layout.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/layout.tsx",
		"**/app/**/[[]*[]]/layout.tsx": "${dirname(1)}/${dirname}/layout.tsx",
		"**/app/**/layout.tsx": "${dirname}/layout.tsx"
	},

	// Spell checker
	"editor.hideCursorInOverviewRuler": true,
	"git.enableSmartCommit": true,

	"cSpell.language": "en,sk,cs,ua,ru,en-gb",
	"cSpell.enableFiletypes": [
		"markdown",
		"php",
		"plaintext",
		"blade",
		"css",
		"html",
		"javascript",
		"json",
		"jsonc",
		"typescript",
		"vue"
	],

	"editor.unicodeHighlight.allowedCharacters": {
		"а": true,
		"с": true,
		"Т": true,
		"б": true,
		"е": true
	},

	// Others
	"files.defaultLanguage": "plaintext",
	"diffEditor.ignoreTrimWhitespace": false,
	"security.workspace.trust.untrustedFiles": "open",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"window.confirmBeforeClose": "keyboardOnly",
	"git.openRepositoryInParentFolders": "always",
	"editor.gotoLocation.multipleDefinitions": "peek",
	"editor.stickyScroll.enabled": false,
	"workbench.tree.enableStickyScroll": false,
	"window.commandCenter": false,
	"workbench.statusBar.visible": true,
	"editor.formatOnPaste": true,
	"workbench.colorTheme": "One Dark Pro Darker",
	"laravel-pint.enable": true,
	"extensions.ignoreRecommendations": true,
	"bracket-pair-colorizer-2.depreciation-notice": false,
	"redhat.telemetry.enabled": true,
	"pieces.cloudCapabilities": "Blended",
	"pieces.telemetry": true,
	"workbench.activityBar.location": "top",
	"pieces.OS.launchOnStartup": "Yes",
	"css.hover.references": false,
	"less.hover.references": false,
	"scss.hover.references": false,
	"html.hover.references": false,
	"html.hover.documentation": false,
	"workbench.editor.enablePreview": false
}
